@{
    var controller = ViewContext.RouteData.Values["controller"];
    var action = ViewContext.RouteData.Values["action"];
    var id = ViewContext.RouteData.Values["id"];

    var numero = Model.Numero > 0 ? Model.Numero.ToString() : string.Empty;
    var data = Model.DataNascimento.Equals(DateTime.MinValue) ?
        string.Empty : Model.DataNascimento.ToString("yyyy-MM-dd");

    ViewData["Title"] = "Formulário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@RenderBody()

<div class="body-content mx-auto">
    <form action="/@controller/@action" method="post" class="border rounded mx-auto">
        <input type="hidden" id="IdCliente" name="IdCliente" value="@Model.Id">
        <div class="row">
            <div class="form-group col">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required>
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="DataNascimento">Data de nascimento</label>
                <input type="date" class="form-control" id="DataNascimento" name="DataNascimento"
                       value="@data" required>
            </div>
            <div class="form-group col">
                <label for="Masculino">Sexo</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Sexo" id="Masculino" value="M"
                           checked="@Model.Sexo.Equals('M') || @action.Equals("Incluir")">
                    <label class="form-check-label" for="Masculino">Masculino</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Sexo" id="Feminino" value="F"
                           checked="@Model.Sexo.Equals('F')">
                    <label class="form-check-label" for="Feminino">Feminino</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="Cep">CEP</label>
                <div class="input-group mb-3">

                    <input type="text" class="form-control" id="Cep" name="Cep" value="@Model.Cep">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="BotaoCep" onclick="BuscarCep()">Buscar</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="Endereco">Endereço</label>
                <input type="text" class="form-control" id="Endereco" name="Endereco" value="@Model.Endereco">
            </div>
            <div class="form-group col">
                <label for="Numero">Número</label>
                <input type="text" class="form-control" id="Numero" name="Numero" value="@numero">
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="Complemento">Complemento</label>
                <input type="text" class="form-control" id="Complemento" name="Complemento" value="@Model.Complemento">
            </div>
            <div class="form-group col">
                <label for="Bairro">Bairro</label>
                <input type="text" class="form-control" id="Bairro" name="Bairro" value="@Model.Bairro">
            </div>
        </div>

        <div class="row">
            <div class="form-group col">
                <label for="Estado">Estado</label>
                <input type="text" class="form-control" id="Estado" name="Estado" value="@Model.Estado">
            </div>
            <div class="form-group col">
                <label for="Cidade">Cidade</label>
                <input type="text" class="form-control" id="Cidade" name="Cidade" value="@Model.Cidade">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>

@RenderSection("Scripts", required: false)

